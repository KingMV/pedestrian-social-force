<Window x:Class="Social_Forces_Multirun.Animation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animation" Height="480" Width="730">
    <Grid>
        <Canvas Name="myCanvas" Background="LightGray">
            <Button Canvas.Left="10" Canvas.Bottom="6" Width="40" Content="  Play  " Name="btnPlay"></Button>
            <Button Canvas.Left="60" Canvas.Bottom="6" Width="50" Content="  Pause  " Name="btnPause"></Button>
            <Button Canvas.Left="120" Canvas.Bottom="6" Width="60" Content="  Reverse  " Name="btnReverse"></Button>
            <Label Name ="lblTime" Content="Press play to begin" Canvas.Left="180" Canvas.Bottom="4" Width="300"></Label>
            <Slider Minimum="1" Maximum="7" Name="sldSpeed" Canvas.Left="490" Canvas.Bottom="6" Width="100" TickFrequency="1" TickPlacement="TopLeft" IsSnapToTickEnabled="True" Background="#FF817B7B" Value="4"></Slider>
            <Label Name="lblSlider" Content="10 Timestep/sec" Canvas.Left="600" Canvas.Bottom="6"></Label>
            <Rectangle Width="600" Height="400" Canvas.Top="10" Canvas.Left="10" Fill="LightSalmon"></Rectangle>
            <Rectangle Width="100" Height="80" Canvas.Top="170" Canvas.Left="610" Fill="LightSalmon"></Rectangle>
            <Rectangle Width="60" Height="365" Canvas.Top="27.5" Canvas.Left="40" Fill="Aqua"></Rectangle>
        </Canvas>
    </Grid>
</Window>
